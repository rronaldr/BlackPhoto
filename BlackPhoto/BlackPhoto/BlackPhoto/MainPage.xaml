<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:BlackPhoto"
             x:Class="BlackPhoto.MainPage">
    
    <StackLayout Spacing="10">
        <Label Margin="0,10,0,0" FontSize="18" FontFamily="Roboto" HorizontalOptions="CenterAndExpand" VerticalOptions="Center">Search for photos</Label>
        <Button Clicked="Scan" Text="SCAN" TextColor="Black" FontFamily="Roboto" FontAttributes="Bold" WidthRequest="150" HeightRequest="50" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand"></Button>
        <Label x:Name="ScanLocationLabel" Margin="0,0,0,10" FontSize="18" FontFamily="Roboto" HorizontalOptions="CenterAndExpand" VerticalOptions="End"></Label>
    </StackLayout>
</ContentPage>